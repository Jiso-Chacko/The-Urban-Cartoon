	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-10 p-b-20">
				<form class="login100-form validate-form" method="POST" id="phoneForm" name="phoneForm" action="/otplogin">
					<span class="login100-form-title p-b-70">
						Enter phone number
					</span>
                    {{#if phnExistErr}}
                    <span style="color: brown;">Phone number does't exist</span>
                    {{/if}}
				
					
					<div class="wrap-input100 validate-input m-t-10 m-b-35" data-validate = "Enter phonenumber">
						<input class="input100" type="text" name="phone" id="phone" pattern="[6-9]{1}[0-9]{9}"  placeholder="Phonenumber" oninput="phoneValid()">
						<span class="focus-input100" ></span>
						<span style="color: brown;" id="phnErr"></span>
					</div>


					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
						 Submit
						</button>
					</div>				


				</form>
