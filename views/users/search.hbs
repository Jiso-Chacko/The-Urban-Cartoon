
<div class="container">

{{#if searchErr}}

<h1 class="text-center text-danger mb-20">No such products exists</h1>
{{else}}

<div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade pt-2 show active" id="pills-one-example1" role="tabpanel" aria-labelledby="pills-one-example1-tab" data-target-group="groups">
                                <ul class="row list-unstyled products-group no-gutters">
                                   {{#each products}}
                                    <li class="col-6 col-md-3 col-wd-2gdot4 product-item">
                                        <div class="product-item__outer h-100">
                                            <div class="product-item__inner px-xl-4 p-3">
                                                <div class="product-item__body pb-xl-2">
                                                    <div class="mb-2"><a href="product-categories-7-column-full-width.html" class="font-size-12 text-gray-5">{{this.productTitle}}</a></div>
                                                    <h5 class="mb-1 product-item__title"><a href="/viewProduct?id={{this._id}}" class="text-blue font-weight-bold">{{this.productName}}</a></h5>
                                                    <div class="mb-2">
                                                        <a href="#" class="d-block text-center"><img class="img-fluid" src="{{this.imageName.[0]}}" alt="Image Description"></a>
                                                    </div>
                                                    <div class="flex-center-between mb-1">
                                                        <div class="prodcut-price">
                                                            {{#if offer}}
                                                <del class="font-size-16 text-gray-9 d-block">₹{{this.oldPrice}}</del>
                                                <ins class="font-size-20 text-red text-decoration-none d-block">₹{{this.price}}</ins>
                                                {{else}}
                                                <div class="text-gray-100">₹{{this.price}}</div>
                                                {{/if}}
                                                        </div>
                                                        <div class="d-none d-xl-block prodcut-add-cart">
                                                            <a onclick="addToCart('{{this._id}}')" class="btn-add-cart btn-primary transition-3d-hover"><i class="ec ec-add-to-cart"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="product-item__footer">
                                                    <div class="border-top pt-2 flex-center-between flex-wrap">
            
                                                        <a href="#" class="text-gray-6 font-size-13"><i class="ec ec-favorites mr-1 font-size-15"></i> Wishlist</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>

                        </div>
                        </div>


{{/if}}                        