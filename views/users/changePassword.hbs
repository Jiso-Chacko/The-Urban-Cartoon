<!-- End breadcrumb -->

<div class="container rounded bg-white mt-5 mb-5">
    <div class=" mb-3">
        <h1 class="text-center">Change password</h1>

    </div>
    <div class="row">
        <div class="col-md-3 ">

        </div>
        <div class="col-md-5 d-flex justify-content-center ml-10">
            <div class="p-3 py-5">
                <form action="/viewProfile/:{{userId}}/changePassword" method="POST" id="changePass" name="changePass">
                    <div class="card" style="width: 50rem;">
                        <div class="card-body">
                            {{#if passErr}}
                            <span style="color: brown;" id="passErr">Incorrect password entered</span>
                            {{/if}}
                            <div class="row mt-2 ml-10">
                                <div class="col-md-6"><label class="labels">
                                        <h4>Password</h4>
                                    </label></div>
                                <div class="col-md-6"><label class="labels">
                                        <input type="password" id="pass1" name="pass1" placeholder="Password"
                                            class="form-control">
                                        <span style="color: brown;" id="pass1Err"></span>

                                        {{!-- <h4>{{user.userFirstName}}</h4> --}}
                                    </label></div>
                            </div>

                            <div class="row mt-2 ml-10">
                                <div class="col-md-6"><label class="labels">
                                        <h4>Confirm password</h4>
                                    </label></div>
                                <div class="col-md-6"><label class="labels">
                                        {{!-- <h4>{{user.userLastName}}</h4> --}}
                                        <input type="password" id="pass2" name="pass2" placeholder="Confirm password"
                                            class="form-control">
                                        <span style="color: brown;" id="pass2Err"></span>

                                    </label></div>
                            </div>

                            <div class="row mt-2 ml-10">
                                <div class="col-md-6"><label class="labels">
                                        <h4>New password</h4>
                                    </label></div>
                                <div class="col-md-6"><label class="labels">
                                        {{!-- <h4>{{user.userLastName}}</h4> --}}
                                        <input type="password" id="newPass" name="newPass" placeholder="New password"
                                            class="form-control">
                                        <span style="color: brown;" id="newPassErr"></span>

                                    </label></div>
                            </div>

                        </div>
                    </div>

                    <div>
                        <div class="mt-5 text-center"><button type="submit"
                                class="btn btn-primary profile-button">Change password</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>

    </div>
</div>
</div>
</div>

<script>
    setTimeout(() => {
        document.getElementById('passErr').innerHTML = ''
    }, 3500)

    changePass.addEventListener('submit', function (e) {
        // prevent the form from submitting
        console.log("Form validation")
        var pass1 = this.querySelector("input[id=pass1]").value;
        var pass2 = this.querySelector("input[id=pass2]").value;
        var newPass = this.querySelector("input[id=newPass]").value;


        if (pass1.trim() == "" || pass1 < 2) {
            console.log('Pass err' + pass1)
            document.getElementById('pass1').focus();
            document.getElementById('pass1Err').innerHTML = "Enter valid password"
            e.preventDefault()
        } else {
            document.getElementById('pass1Err').innerHTML = ""
        }
        if (pass2.trim() == "" || pass2 < 2) {
            document.getElementById('pass2').focus();
            document.getElementById('pass2Err').innerHTML = "Enter valid password"
            e.preventDefault()
        } else {
            document.getElementById('pass2Err').innerHTML = ""
        }
        if (pass1 != pass2) {
            document.getElementById('pass2').focus()
            document.getElementById('pass2Err').innerHTML = "Password doesn't match!"
            e.preventDefault()
        } else {
            document.getElementById('pass2Err').innerHTML = ""
        }

    });
</script>