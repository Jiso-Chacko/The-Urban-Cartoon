<script>
    $('#review_btn').click((e) => {
        let review = document.getElementById('review').value
        let name = document.getElementById('name').value
        let email = document.getElementById('email').value
        let proId = document.getElementById('proId').value
        let rating = document.getElementById('starRating').value
        var regx =
            /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;

        console.log(proId)
        if (review.trim() == "" || review < 4) {
            e.preventDefault()
            document.getElementById('review').focus();
            document.getElementById('reviewErr').innerHTML = "Please add a review"
        } else if (review > 4) {
            document.getElementById('reviewErr').innerHTML = ""
        } else if (name.trim() == "" || name < 2) {
            e.preventDefault()
            document.getElementById('name').focus();
            document.getElementById('nameErr').innerHTML = "Please enter a name"
        } else if (email.trim() == "" || email < 2 || !email.match(regx)) {
            e.preventDefault()
            document.getElementById('email').focus();
            document.getElementById('emailErr').innerHTML = "Please enter an email"
        } else {
            $.ajax({
                url: `/addReview`,
                method: 'post',
                data: {
                    name: name,
                    email: email,
                    review: review,
                    rating: rating,
                    proId: proId
                },
                success: (response) => {
                    
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top',
                        showConfirmButton: false,
                        timer: 2100,
                        timerProgressBar: false,
                        didOpen: (toast) => {
                            toast.addEventListener('mouseenter', Swal.stopTimer)
                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                        }
                    })

                    Toast.fire({
                        icon: 'success',
                        title: 'We love your reviews!'
                    }).then(() => {
                    location.reload()
                    })
                }
            })
        }

    })
</script>

