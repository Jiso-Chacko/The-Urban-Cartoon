<div class="container">
    <h1 class="text-center"> Sales Report</h1>

    <div class="d-flex justify-content-end" style="margin-top: 5rem;">
        <form action="/admin/searchStockDate" method="GET">
            {{!-- <label for="birthday">Date</label> --}}
            <label>From date</label>
            <input type="date" id="startdate" class="selectdate" onchange="selectdate()" name="StartDate">
            <label style="margin-left: 1rem;">To date</label>
            <input style="margin-left: 1rem;" type="date" id="EndDate" class="selectdate" name="enddate">
            <input style="margin-left: 1rem;" class="btn btn-primary" type="submit">
        </form>
    </div>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Status</th>
                            <th>Quantity</th>
                            <th>Value</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        {{#if this.products.delivered}}
                        <tr>
                            <td>{{#each this.products.productDetails}}{{this.productName}}{{/each}}</td>
                            <td>{{this.products.status}}</td>
                            <td>{{this.products.quantity}}</td>
                            <td>{{#each this.products.productDetails}}{{this.price}}{{/each}}</td>
                            <td>{{this.revenue}}</td>

                            {{!-- <a class="btn btn-success" style="width: 5.5rem;" onclick="return confirm('Are you sure to enable {{ this.userFirstName }}? ')"  href="/admin/enable-user?id={{ this._id }}">Unblock</a> --}}

                        </tr>
                        {{/if}}
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

