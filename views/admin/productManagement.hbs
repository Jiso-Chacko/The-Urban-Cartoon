
<div class="container">


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <table class="table table-hover" id="myTable">
                    <thead>
                        <tr>

                            <th>OrderId</th>
                            <th>user</th>
                            <th>Product</th>
                            <th>Payment method</th>
                            <th>Amount received</th>
                            <th>Status</th>
                            <th>Change Status</th>
                            <th>Cancel order</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>

                            <td>{{this._id}}</td>
                            <td>{{this.deliveryDetails.firstName}}</td>
                            <td><a href="/admin">View products</a></td>

                            <td>{{this.paymentMethod}}</td>
                            <td>â‚¹{{this.totalAmount.totalSum}}</td>
                            <td style="text-transform: uppercase;">{{this.status}}</td>
                            
                            <td>
                                
                                <select  onmousedown="this.value=''" onchange="changeStatus(event,this.value,'{{this._id}}')">
                                    <option value="shipped" class="shipped">Shipped</option>
                                    <option value="delivered" class="delivered">Delivered</option>
                                    {{!-- <p class="text-success" style="display: none">Delivered</p> --}}

                                </select> 
    
                                </td>
                            <td><button class="btn btn-sm btn-danger">Cancel</button></td>
                            {{!-- <a class="btn btn-success" style="width: 5.5rem;" onclick="return confirm('Are you sure to enable {{ this.userFirstName }}? ')"  href="/admin/enable-user?id={{ this._id }}">Unblock</a> --}}

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

