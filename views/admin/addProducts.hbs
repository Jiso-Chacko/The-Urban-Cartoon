    function proNameValid() {
        var text = document.getElementById("productName").value;
       
        if (text.length == 0) {
            // document.getElementById("nameLen").style.display = "block";
            document.getElementById("nameReq").innerHTML = "required ";

            // document.getElementById("nameErr").style.display = "none";
        } else if (text.length < 3) {
            document.getElementById("nameReq").innerHTML = "Minimum Length required";
        } else {
            document.getElementById("nameReq").innerHTML = " ";
        }
    }

    function proTitle() {
        var text = document.getElementById("productTitle").value;
        var letters = /^[a-zA-Z\s]*$/;
        if (text.length == 0) {
            // document.getElementById("nameLen").style.display = "block";
            document.getElementById("titleReq").innerHTML = "required ";

            // document.getElementById("nameErr").style.display = "none";
        } else if (text.length < 3) {
            document.getElementById("titleReq").innerHTML = "Minimum Length required";
        } else if (!text.match(letters)) {
            document.getElementById("titleReq").innerHTML = "Only letters are allowed";

        } else {
            document.getElementById("titleReq").innerHTML = " ";
        }
    }


    function proDescription() {
