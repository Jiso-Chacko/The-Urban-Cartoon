<script>

    
    setTimeout(function(){
        document.getElementById('invalid').innerHTML=''
    },4000)

    document.adminLoginForm.addEventListener("submit", function(event){
        var name = this.querySelector("input[id=exampleInputUsername1]").value;
        var pass = this.querySelector("input[id=exampleInputPassword1]").value;

        if(name.trim() == " " || name.length < 3){
            document.getElementById("exampleInputUsername1").focus
            event.preventDefault();
        }
        else if(pass.trim() == " " || pass.length < 3){
            document.getElementById("exampleInputPassword1").focus
            event.preventDefault()
        }
    })

    function usernameCheck(){
        var text = document.getElementById("exampleInputUsername1").value
        var rejex = /^[a-zA-Z0-9]+$/;

        if(text == ""){
            document.getElementById("usernameErr").innerHTML = "required"
        }
        else if(!text.match(rejex)){
            document.getElementById("usernameErr").innerHTML = "Please enter a valid username"
        }
        else{
            document.getElementById("usernameErr").innerHTML = ""
        }
    }

    function passValid(){

        var pass =  document.getElementById("exampleInputPassword1").value
        var rejex = /^[a-zA-Z\s]*$/;

        if(pass = ""){
            document.getElementById("passwordErr").innerHTML = "required"
        }
        else if(pass.length < 3){
            document.getElementById("passwordErr").innerHTML = "Minimum length required"
        }
        else{
            document.getElementById("passwordErr").innerHTML = ""
        }
    }


</script>

